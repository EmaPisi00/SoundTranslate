<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.projects.translate.ui.controller.ConvertAudioController">
    <stylesheets>
        <URL value="@../css/convertAudio.css"/>
    </stylesheets>
    <!-- Top section (empty) -->
    <top>
        <Pane prefHeight="50"/>
    </top>

    <!-- Center section (form with button) -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Seleziona una cartella:" styleClass="custom-label"/>
            <Button text="Choose Folder" onAction="#onChooseFolder" styleClass="custom-button"
                    focusTraversable="false"/>
            <Button text="Generate Excel File" onAction="#onGenerateExcel" styleClass="custom-button"
                    focusTraversable="false"/>
        </VBox>
    </center>

    <!-- Bottom section (label) -->
    <bottom>
        <Label text="Developed by Emanuele Pisaturo | Â© 2024 All Rights Reserved"
               alignment="CENTER"
               prefHeight="30"
               BorderPane.alignment="CENTER"
               style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
    </bottom>

</BorderPane>
